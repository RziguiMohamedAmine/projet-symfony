
{% block css %}

    <link rel="stylesheet" type="text/css"href="{{asset('front/fonts/material-icon/css/material-design-iconic-font.min.css')}}">

    <link rel="stylesheet"type="text/css" href="{{asset('front/css/styleus.css')}}">
{% endblock %}

<div class="main">

    <section class="signup">
        <div class="container">
            {{ form_start(form) }}
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>

                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        {{  form_widget(form.nom) }}
                    </div>
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            {{  form_widget(form.prenom) }}
                        </div>

                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            {{  form_widget(form.email) }}
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                            {{ form_widget(form.password.first,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                            {{ form_widget(form.password.second,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="phone"><i class="zmdi zmdi-phone"></i></label>
                            {{  form_widget(form.tel) }}
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in <a href="#" class="term-service">Terms of service</a></label>
                        </div>
                        <div class="form-group form-button">

                            <button type="submit" name="signup" id="signup" class="form-submit" value="Register" formnovalidate>
                                {{ button_label|default('Enregistrer') }}</button>

                        </div>

                </div>
                {{ form_end(form) }}
                <div class="signup-image">
                    <figure><img src="{{asset('back/assets/images/Logo_FTF.png')}}" alt="sing up image"></figure>
                    <a href="{{ path('app_login') }}" class="signup-image-link">I am already member</a>
                </div>
            </div>
        </div>
    </section>

</div>










{% block js %}
    <script type="text/javascript" src="{{asset('front/js/scriptUser.js')}}"></script>
{% endblock %}