{% extends 'base.html.twig' %}

{% block body %}
    <div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">


        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add Commantaire Backend ADMIN</h5>

                <!-- General Form Elements -->
                {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                <label for="inputText" class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-10">
                    {{ form_widget(f.descrp,{'attr':{'class':'form-control'}}) }}

                </div>
                {{ form_errors(f.descrp,{'attr':{'class':'text-danger'}}) }}



                <label for="inputText" class="col-sm-4 col-form-label">Publication</label>
                <div class="col-sm-10">
                    {{ form_widget(f.blog,{'attr':{'class':'form-control'}}) }}

                </div>
                {{ form_errors(f.blog,{'attr':{'class':'text-danger'}}) }}





                <br/>
                <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                    {{ form_widget(f.submit,{'attr':{'class':'btn btn-primary'}}) }}
                </div>

                {{ form_end(f) }}

            </div>
        </div>

    </div>

    </div>


{% endblock %}