{% extends 'back.html.twig' %}

{% block body %}
  <div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Update Blog Backend ADMIN</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f) }}
                    <label for="inputText" class="col-sm-6 col-form-label">Titre</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.titre,{'attr':{'class':'form-control'}}) }}
                    </div>


                    <label for="inputText" class="col-sm-16 col-form-label">Contenu</label>
                    <div class="col-sm-15">
                        {{ form_widget(f.contenu,{'attr':{'class':'form-control'}}) }}

                    </div>
                    <label for="inputText" class="col-sm-6 col-form-label">image</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.image,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center ">

                        {{ form_widget(f.submit,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}