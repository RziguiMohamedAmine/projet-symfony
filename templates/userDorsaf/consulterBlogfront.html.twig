{% extends 'front.html.twig' %}



{% block body %}
  <center>
    <br><br><br><br><br><br>
    <style>
        .button {

            padding: 5px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 10px;
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
            background-color: transparent;
            color: black;
            border: 2px solid #f44336;
        }
        .button:hover {
            background-color: #f44336; /* Green */
            color: white;
        }
    </style>
    <div class="row-cols-1">
        <img style="height: 400px; width: 300px" src="{{ asset('uploads/images/'~blog.image) }}" >

        <h5 class="card-title">
            <h4>Titre:</h4>{{ blog.titre}}
            <h4>Contenu:</h4>{{ blog.contenu}}

        </h5>

        <p class="card-text"></p>

    </div>
    <table class="table">
        <tr>
            <td><img src="{{asset('front/images/dis.png')}}"></td><td><span class="like-icon"><img src="{{asset('front/images/like-icon.png')}}"></span></td></tr></div>
        <tr> <td><div class="numbar_text">{{ dislike }}</td><td><span class="like-icon">{{ like }}</span></td></div>
        </tr>
        <tr>
            <td> <button class="view_bt" style="background-color: transparent;"><a href="{{ path('like_new_dislike',{'id': blog.id}) }}"><img src="{{ asset('front/images/dislike.png') }}" style="max-width: 50%;"></a></button></td>
            <td> <button class="view_bt" style="background-color: transparent;"><a href="{{ path('like_new_like',{'id': blog.id}) }}"><img src="{{ asset('front/images/like.png') }}" style="max-width: 50%;"></a></button></td>
        </tr>
    </table>
    <div class="comment-box">
        <div class="section-title ">
            <h1><span>{{'Commentaires'|trans }}</span></h1>
        </div>
        {% for comment in commentaires %}
            <div class="single-comment-box">
                <div class="img-box">
                    <img src="{{ asset('front/images/user.png') }}" alt="Awesome Image" style="max-width: 100px">
                </div>
                <div class="text-box">
                    <div class="top-box">
                        <span>{{comment.TempsComm|date() }}</span>
                    </div>
                    <div class="content">
                        <p>{{ comment.descrp }}</p>
                    </div>
                </div>
            </div>

        {% else %}
            <tr>
                <td colspan="7">{{'aucun commentaire n ai saisi'|trans }}</td>
            </tr>
        {% endfor %}
        <div class="single-comment-box">
            <div class="text-box">

                <div>
                    <form method="post" action="{{  path('addComment',{'id': blog.id}) }}" >
                        <label>
                            <textarea id="comment" name="comment" rows="5" cols="100" placeholder="Comments"></textarea>
                        </label>
                        <div class="content">
                            <input type="submit" style="font-size: 16px; font-weight: bold; color: #a6c311; background-color: transparent; border-color: transparent" name="action" value="Commenter" />
                            <input type="submit" style="font-size: 16px; font-weight: bold; color: #a6c311; background-color: transparent; border-color: transparent" name="action"  value="Modifier"  />
                        </div>

                    </form>

                </div>
                <!-- /.col-md-12 -->

            </div>
        </div>

    </div>
    </center>
    {% endblock %} 
   